<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>
<HBox spacing="10.0" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="brane08.fx.mongo.views.OpenView">
    <VBox spacing="10.0">
        <ListView fx:id="connections" />
        <HBox spacing="10.0">
            <Button text="Connect"/>
            <Button text="Cancel"/>
        </HBox>
    </VBox>
    <VBox>
        <TitledPane text="Connection details" collapsible="false">
            <GridPane>
                <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Text fx:id="name" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label text="Server:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <Text fx:id="server" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <Label text="User:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <Text fx:id="user" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                <Label text="Database:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <Text fx:id="database" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>
        </TitledPane>
    </VBox>
    <padding>
        <Insets top="10.0" bottom="10.0" left="10.0" right="10.0"/>
    </padding>
</HBox>
